name:                tip-lib
version:             0.2.2
synopsis:            tons of inductive problems - support library and tools
description:         This package provides a tool for processing inductive theorem proving problems in TIP format (see the homepage for details).
homepage:            http://tip-org.github.io
bug-reports:         http://github.com/tip-org/tools/issues
license:             BSD3
license-file:        LICENSE
author:              Dan RosÃ©n, Nick Smallbone
maintainer:          nicsma@chalmers.se
category:            Theorem Provers
build-type:          Simple
cabal-version:       >=1.10

extra-source-files:  changelog src/errors.h

source-repository head
  type:     git
  location: http://github.com/tip-org/tools
  subdir:   tip-lib

library
  exposed-modules:
    Tip.Core
    Tip.Lint
    Tip.Scope
    Tip.Fresh
    Tip.WorkerWrapper
    Tip.Simplify
    Tip.Passes
    Tip.Pretty
    Tip.Pretty.SMT
    Tip.Pretty.Why3
    Tip.Pretty.Isabelle
    Tip.Pretty.Haskell
    Tip.Pretty.Hipster
    Tip.Pretty.TFF
    Tip.Pretty.Waldmeister

    Tip.Parser

    Tip.Utils
    Tip.Writer

    Tip.Rename
    Tip.Utils.Rename
    Tip.Haskell.Repr
    Tip.Haskell.Translate
    Tip.Haskell.Rename
    Tip.CallGraph
    Tip.Utils.Horn
    Tip.Utils.SetCover

    Tip.Pass.Booleans
    Tip.Haskell.GenericArbitrary
    Tip.Haskell.Observers

  other-modules:
    Tip.Pass.AddMatch
    Tip.Pass.AxiomatizeFuncdefs
    Tip.Pass.AxiomatizeDatadecls
    Tip.Pass.CommuteMatch
    Tip.Pass.Conjecture
    Tip.Pass.CSEMatch
    Tip.Pass.DropAttributes
    Tip.Pass.DropSuffix
    Tip.Pass.UniqLocals
    Tip.Pass.EliminateDeadCode
    Tip.Pass.EqualFunctions
    Tip.Pass.FillInCases
    Tip.Pass.Induction
    Tip.Pass.Lift
    Tip.Pass.Monomorphise
    Tip.Pass.Pipeline
    Tip.Pass.RemoveMatch
    Tip.Pass.RemoveNewtype
    Tip.Pass.SelectConjecture
    Tip.Pass.Uncurry
    Tip.Pass.Concretise

    Tip.Parser.ErrM
    Tip.Parser.AbsTIP
    Tip.Parser.LexTIP
    Tip.Parser.ParTIP
    Tip.Parser.Convert

  hs-source-dirs:      src
  include-dirs:        src
  ghc-options:         -W -Wno-unused-matches
  default-language:    Haskell2010
  build-depends:       base >=4 && <5,
                       tip-types,
                       geniplate-mirror >=0.7.1,
                       genifunctors >= 0.3,
                       split,
                       containers,
                       mtl,
                       pretty,
                       array,
                       optparse-applicative,
                       twee,
                       minisat,
                       deepseq,
                       structural-induction >= 0.3 && < 0.4,
                       QuickCheck
  build-tools:         alex, happy

executable tip
  main-is:             executable/Main.hs
  default-language:    Haskell2010
  build-depends:       base,
                       tip-lib,
                       pretty,
                       filepath,
                       optparse-applicative
